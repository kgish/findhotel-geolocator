<form>

    <div class="form-group row">
        <label for="title" class="col-sm-2 col-form-label">Title:</label>
        <div class="col-sm-10">
            {{input value=model.title type='text' id='title' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="contents" class="col-sm-2 col-form-label">Contents:</label>
        <div class="col-sm-10">
            {{textarea value=model.contents id='contents' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="author" class="col-sm-2 col-form-label">Author:</label>
        <div class="col-sm-10">
            {{#x-select value=currentUser class="custom-select" action="selectUser" as |xs|}}
                {{#each users as |user|}}
                    {{#xs.option value=user}}{{user.fullname}}{{/xs.option}}
                {{/each}}
            {{/x-select}}
        </div>
    </div>

    {{partial 'shared/button-group'}}

</form>
