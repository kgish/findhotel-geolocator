<h2>Show User</h2>

<form>

    <div class="form-group row">
        <label for="firstname" class="col-sm-2 col-form-label">First Name:</label>
        <div class="col-sm-10">
            {{input value=model.firstname type='text' id='firstname' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="lastname" class="col-sm-2 col-form-label">Last Name:</label>
        <div class="col-sm-10">
            {{input value=model.lastname type='text' id='lastname' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="admin" class="col-sm-2 col-form-label">Admin:</label>
        <div class="col-sm-10">
            {{input value=(if model.admin 'Yes' 'No') type='text' id='admin' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            {{input value=model.email type='email' id='email' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="description" class="col-sm-2 col-form-label">Description:</label>
        <div class="col-sm-10">
            {{textarea value=model.description id='description' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <label for="created" class="col-sm-2 col-form-label">Created:</label>
        <div class="col-sm-10">
            {{input value=model.created type='text' id='created' readonly='readonly' class='form-control'}}
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            {{#link-to 'users' class='btn btn-success'}}{{fa-icon 'arrow-left'}} Back {{/link-to}}
        </div>
    </div>
</form>

<h2>Notes</h2>

{{#if model.notes.length}}
    <table class="table table-striped table-condensed table-bordered">
        <thead>
        <tr>
            <th> Title </th>
            <th> Contents </th>
            <th> Created </th>
            <th> Updated </th>
        </tr>
        </thead>
        <tbody>
        {{#each model.notes as |note|}}
            <tr>
                <td> {{note.title}} </td>
                <td> {{note.contents}} </td>
                <td class="whitespace-nowrap"> {{note.created}} </td>
                <td class="whitespace-nowrap"> {{note.updated}} </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p id="blankslate">
        No notes found
    </p>
{{/if}}
