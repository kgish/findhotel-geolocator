<h2>Users: {{model.length}}</h2>

{{#if model.length}}
  <table class="table table-striped table-condensed table-bordered">
    <thead>
      <tr>
        <th> Name </th>
        <th> Email </th>
        <th> Notes </th>
        <th colspan="3" style="text-align:center"> {{#link-to "users.new" class="btn btn-success" }}{{fa-icon 'plus'}} New User{{/link-to}}</th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td> {{user.fullname}} </td>
          <td> {{user.email}} </td>
          <td> {{user.notes.length}} </td>
          <td> {{#link-to "users.edit" user title='Edit user'}}{{fa-icon 'edit'}}{{/link-to}} </td>
          <td> {{#link-to "users.show" user title='Show user'}}{{fa-icon 'eye'}}{{/link-to}} </td>
          <td> <a href="#" {{action "remove" user}} title="Delete user">{{fa-icon 'trash'}}</a> </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No users found
  </p>
{{/if}}
